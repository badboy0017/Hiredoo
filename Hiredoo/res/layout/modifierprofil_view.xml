<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gris_background" >
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@layout/header"
	    android:orientation="horizontal" >
	
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/logo"
	        android:scaleType="fitStart"
	        android:layout_marginLeft="10sp"
	        android:contentDescription="@string/logo_description" />
    
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp" >
	    
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "/>
	    
        <EditText 
	        android:id="@+id/modifierprofil_name"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:hint="The name here"
	        android:inputType="text"
	        android:background="@color/blanc"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp" >
	    
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity sector: "/>
	    
        <EditText 
	        android:id="@+id/modifierprofil_activitysector"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/blanc"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp" >
	    
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resume: "/>
	    
        <EditText 
	        android:id="@+id/modifierprofil_resume"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/blanc"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp" >
	    
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "/>
	    
        <EditText 
	        android:id="@+id/modifierprofil_address"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/blanc"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp" >
	    
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web site: "/>
	    
        <EditText 
	        android:id="@+id/modifierprofil_website"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/blanc"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp" >
	    
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "/>
	    
        <EditText 
	        android:id="@+id/modifierprofil_email"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/blanc"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp" >
	    
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telephone: "/>
	    
        <EditText 
	        android:id="@+id/modifierprofil_telephone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/blanc"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp" >
	    
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fax: "/>
	    
        <EditText 
	        android:id="@+id/modifierprofil_fax"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/blanc"/>
        
    </LinearLayout>
    
    <Button 
	    android:id="@+id/modifierprofil_btnmodifier"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:text="Enregistrer"/>
   
</LinearLayout>
