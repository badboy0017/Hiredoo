<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gris_background" >
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@layout/header"
	    android:orientation="vertical" >
	    
	    <ImageView 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/logo"
	        android:scaleType="fitStart"
	        android:layout_marginLeft="10sp"
	        android:contentDescription="@string/logo_description" />
	    
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp" >
	    
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/postulerjob_cv"/>
	    
        <Spinner 
	        android:id="@+id/postulerjob_cv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/blanc"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp" >
	    
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/postulerjob_lm"/>
	    
        <Spinner 
	        android:id="@+id/postulerjob_lm"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/blanc"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp" >
	    
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/postulerjob_video"/>
	    
        <Spinner 
	        android:id="@+id/postulerjob_video"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/blanc"/>
        
    </LinearLayout>
    
    <Button 
        android:id="@+id/postulerjob_btnpostuler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Postuler"/>

</LinearLayout>
