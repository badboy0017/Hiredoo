<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gris_background" >
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@layout/header"
	    android:orientation="vertical" >
	
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/logo"
	        android:scaleType="fitStart"
	        android:layout_marginLeft="10sp"
	        android:contentDescription="@string/logo_description" />
	    
	    <View 
			android:layout_width="fill_parent"
			android:layout_height="@dimen/separator"
			android:background="@color/noir" />
    
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	    
        <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/ajouter_experience_main_title"
			android:textSize="@dimen/main_title"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/rouge_bordeau"
			android:layout_margin="@dimen/margin_medium"
			android:layout_gravity="center" />
        
        <EditText 
            android:id="@+id/ajouter_experience_title"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:background="@color/blanc"
            android:layout_margin="@dimen/margin_small"
            android:hint="@string/ajouter_experience_title" />
        
        <EditText 
            android:id="@+id/ajouter_experience_entreprise"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:background="@color/blanc"
            android:layout_margin="@dimen/margin_small"
            android:hint="@string/ajouter_experience_entreprise" />
        
        <EditText 
            android:id="@+id/ajouter_experience_location"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:background="@color/blanc"
            android:layout_margin="@dimen/margin_small"
            android:hint="@string/ajouter_experience_location" />
        
        <DatePicker
            android:id="@+id/ajouter_experience_datefrom"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin_small" />
        
        <DatePicker
            android:id="@+id/ajouter_experience_dateto"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin_small" />
        
		<EditText 
            android:id="@+id/ajouter_experience_link"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:inputType="textUri"
            android:background="@color/blanc"
            android:layout_margin="@dimen/margin_small"
            android:hint="@string/ajouter_experience_link" />
		
		<EditText 
            android:id="@+id/ajouteroffre_description"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:inputType="textMultiLine"
            android:lines="5"
            android:background="@color/blanc"
            android:layout_margin="@dimen/margin_small"
            android:hint="@string/ajouter_experience_description" />

    </LinearLayout>
    
    <Button 
	    android:id="@+id/ajouter_experience_btnajouter"
	    android:layout_width="100dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:layout_marginRight="@dimen/margin_small"
	    android:text="@string/ajouter_experience_btnajouter"/>
   
</LinearLayout>
